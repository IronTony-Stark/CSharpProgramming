<Window x:Class="KMA.ProgrammingInCSharp2019.Lab1.IntroToAstrology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:astrology="clr-namespace:KMA.ProgrammingInCSharp2019.Lab1.IntroToAstrology.Views.Astrology"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid IsEnabled="{Binding IsControlEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
        <astrology:AstrologyControl></astrology:AstrologyControl>
        <wpf:ImageAwesome Icon="Refresh" Width="50" Height="50" Spin="True" Visibility="{Binding LoaderVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></wpf:ImageAwesome>
    </Grid>
</Window>







